<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Best Hackathon Codiseea</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="panel" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <AuthorizeView>
        <Authorized>
            @if (stageLevel == 1)
            {
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="stageone">
                        <span class="spinner-border text-success" aria-hidden="true"></span>Stage 1
                    </NavLink>
                </li>
            }
            @if (stageLevel == 2)
            {
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="stageone">
                        <span class="oi oi-plus" aria-hidden="true"></span>Stage 1
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="stagetwo">
                        <span class="oi oi-plus" aria-hidden="true"></span>Stage 2
                    </NavLink>
                </li>

            }
            @if (stageLevel == 3)
            {
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="stageone">
                        <span class="oi oi-plus" aria-hidden="true"></span>Stage 1
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="stagetwo">
                        <span class="oi oi-plus" aria-hidden="true"></span>Stage 2
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="stagethree">
                        <span class="oi oi-plus" aria-hidden="true"></span>Stage 3
                    </NavLink>
                </li>
            }
        </Authorized>
        </AuthorizeView> 
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    private int stageLevel = 3;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
